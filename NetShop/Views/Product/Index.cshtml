<div class="catdiv">
    @foreach(var item in ViewBag.Categories)
    {
        <div class="catblock">
            <img class="catimg" src="https://localhost:5001/categories/images/@item.Image">
        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="GetByCategory" asp-route-id="@item.Id">@item.Name</a>
        </div>
    }
</div>



<div class="bigdiv">
@foreach(var item in Model)
{
        @if (item.Count > 0)
        {
            <div class="smalldiv">
                <div class="card" style="width: 20rem;">
                    <img class="card-img-top" src="https://localhost:5001/products/images/@item.Image" alt="Тут должна была быит картина" width="300" height="300">
                    <div class="card-body">
                        <h4 class="card-title">@item.Name</h4>
                        <h5 class="card-title">@language.GetKey("price"): @item.PriceOutCome @language.GetKey("sum")</h5>
                        <p class="card-text">@item.ShortDesc</p>
                        <a asp-action="GetProduct" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-primary">@language.GetKey("buy")</a>
                    </div>
                </div>
            </div>
        }
        @* <h5>@item.CategoryId</h5>*@
}
</div>

