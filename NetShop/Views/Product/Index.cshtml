}
@inject LanguageService language

<link rel="stylesheet" href="~/css/main.css" />
<form>
    <div class="poisk">
    <input name="search" placeholder="Поиск" class="form-control">
    <button type="submit" class="hidden">submit</button>
    </div>
</form>



