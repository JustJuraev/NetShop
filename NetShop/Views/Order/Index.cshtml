    <form method="post" asp-action="Index" asp-controller="Order">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">@language.GetKey("name")</th>
                    <th scope="col">@language.GetKey("price")</th>
                    <th scope="col">@language.GetKey("count")</th>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.BasketProducts.Count; i++)
                {
                    <tr scope="row">
                        <td><img class="catimg" src="https://localhost:5001/products/images/@Model.BasketProducts[i].Product.Image"></td>
                        <td>@Model.BasketProducts[i].Product.Name</td>
                        <td>@Model.BasketProducts[i].Product.PriceOutCome Сум</td>
                        <td>
                            <div class="inputd">
                                <input type="text" data-price="@Model.BasketProducts[i].Product.PriceOutCome" class="form-control price-input" asp-for="@Model.BasketProducts[i].Count" value="@Model.BasketProducts[i].Count">
                                <input type="hidden" asp-for="@Model.BasketProducts[i].Product.Id" value="@Model.BasketProducts[i].Product.Id">
                                <input type="hidden" asp-for="@Model.BasketProducts[i].Product.PriceOutCome" value="@Model.BasketProducts[i].Product.PriceOutCome">
                                <input type="hidden" asp-for="@Model.BasketProducts[i].Product.Count" value="@Model.BasketProducts[i].Product.Count">
                            </div>
                        </td>
                        <td><button class="btn btn-primary" asp-controller="Order" asp-action="RemoveProduct" asp-route-id="@Model.BasketProducts[i].Product.Id" formmethod="post">Удалить</button></td>
                    </tr>
                }
            </tbody>
        </table>
    <h1>@language.GetKey("totalprice") <span id="total-price">@Model.TotalSum</span> @language.GetKey("sum")</h1>

        @if (Model.BasketProducts.Count > 0)
        {
            <div class="form-group">
                <label>@language.GetKey("tel")</label>
                <input type="text" class="form-control" asp-for="Number">
                <div class="invalid-feedback" style="display:block">
                    <span asp-validation-for="Number"></span>
                </div>
            </div>
            <div class="form-group">
                <label>@language.GetKey("adres")</label>
                <input type="text" asp-for="Address" class="form-control">
                <div class="invalid-feedback" style="display:block">
                    <span asp-validation-for="Address"></span>
                </div>

            </div>
            <div class="form-group">

            <label>@language.GetKey("cartnum")</label>

                <input class="form-control" asp-for="CartNum">
                <div class="invalid-feedback" style="display:block">
                    <span asp-validation-for="CartNum"></span>
                </div>

            </div>
            <div class="form-group">
            <label>@language.GetKey("city"): </label>
                <select asp-for="City" class="form-control">
                    <option>Выберите опцию</option>
                    <option>Ташкент</option>
                    <option>Бухара</option>
                    <option>Фергана</option>
                    <option>Самарканд</option>
                </select>

            </div>

            <div class="form-group">
                <label>@language.GetKey("delive"): </label>
                <select asp-for="Delivery" class="form-control">
                   <option>@language.GetKey("chose")</option>
                   <option value="true">@language.GetKey("dos")</option>
                   <option value="false">@language.GetKey("nodos")</option>
                </select>
                <span asp-validation-for="Delivery"></span>
            </div>
            <button type="submit" class="btn btn-primary">@language.GetKey("ore")</button>
        }
    </form>

<script src="~/js/order.js"></script>
@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
